{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": false, // permit implicit types (for now),
		"lib": ["es2020"]
	},
	"include": [
		"src/**/*",
		"src/types/*"
	],
	"exclude": [
		"node_modules"
	]
}
